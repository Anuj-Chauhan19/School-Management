<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Schools List</title>
   
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

    
    <nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
        <div class="container-fluid ">
            
            <div class="navbar-nav">
                <a href="/addSchool" class="nav-link"><b>Add School</b></a>
            </div>
        </div>
    </nav>

    
    <div class="container mt-5">
        <h2 class="mb-4 text-center">Search Schools by Location</h2>
        <form method="GET" action="/listSchools">
            <div class="row g-3 justify-content-center">
                <div class="col-md-4">
                    <input type="number" step="any" name="latitude" class="form-control" placeholder="Enter your latitude" required>
                </div>
                <div class="col-md-4">
                    <input type="number" step="any" name="longitude" class="form-control" placeholder="Enter your longitude" required>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-success w-100">Search</button>
                </div>
            </div>
        </form>
    </div>

    <% if (typeof schools !== 'undefined') { %>
        <div class="container mt-5">
            <h3 class="mb-4">Schools Near You</h3>
            <% if (schools.length === 0) { %>
                <div class="alert alert-warning" role="alert">
                    No schools available for the entered location.
                </div>
            <% } else { %>
                <div class="row row-cols-1 row-cols-md-3 g-4">
                    <% schools.forEach(school => { %>
                        <div class="col">
                            <div class="card h-100 shadow-sm">
                                <div class="card-body">
                                    <h5 class="card-title"><%= school.name %></h5>
                                    <p class="card-text"><strong>Address:</strong> <%= school.address %></p>
                                    <% if (school.distance !== undefined && school.distance !== null) { %>
                                        <p class="card-text text-muted">Distance: <%= school.distance.toFixed(2) %> km</p>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } %>
        </div>
    <% } %>

 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
